
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
       
        android:layout_height="wrap_content" >
        <ScrollView 
 android:id="@+id/sc1"
 android:background="#000"
 android:layout_width="fill_parent"
 android:layout_height="match_parent">

<RelativeLayout 
    android:background="#333"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    
    android:layout_height="fill_parent"
    android:orientation="vertical" 
     android:padding="5dp"
   >
    
    

   <LinearLayout
        android:id="@+id/listingxx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#333"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="28dp"
            android:layout_height="match_parent"
          
                 android:src="@drawable/abc_ic_ab_back_holo_dark"
            android:text=""
            android:textColor="#fff" />

        <TextView
            android:id="@+id/ssize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="Deduction" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listingxx"
        android:layout_margin="10dp"
        
        android:hint="Name"
        android:background="#333"
        android:textColor="#ccc"
        android:textAppearance="?android:attr/textAppearanceLarge" />


   
     
   

    <LinearLayout
         android:id="@+id/lstv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_below="@+id/textView1"
        android:gravity="center">


        <EditText
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:hint="0.00"
            android:padding="10dp"
            android:textColor="#ccc"
            android:maxLength="10"
            android:minEms="1"
            />

    </LinearLayout>
      
   
    
 
     <DatePicker  
        android:id="@+id/datePicker1"  
        android:calendarViewShown="false"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        
        android:layout_below="@+id/lstv"  
        android:layout_centerHorizontal="true"  
        android:layout_marginBottom="30dp" />  
        
    <LinearLayout
        android:id="@+id/btnChangeDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePicker1"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        android:background="#000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.01"
            android:text="1/2/2017"
            android:textColor="#999" />

        <Button
            android:id="@+id/btnChangeDate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ssss"
            android:textColor="#999" />
    </LinearLayout>

      <EditText
        android:id="@+id/details"
                android:layout_below="@+id/btnChangeDate2"  
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp"
        android:hint="Description"
       
       
        android:layout_marginTop="1dp"
        android:gravity="top|left"
           android:background="#000"
           android:textColor="#999"
   
 />
      
    <LinearLayout
         android:id="@+id/lstv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:gravity="center">
     <Button
        android:id="@+id/btnSubmit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deduct"
       
                         android:background="@drawable/layout_shadow"
        android:textColor="#5fba7d"
        android:padding="20px"
     />
     </LinearLayout>
       <LinearLayout
         android:id="@+id/lstv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/lstv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:gravity="center">
     <Button
        android:id="@+id/btnn2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Installments"
       
                         android:background="@drawable/layout_shadow"
        android:textColor="#5fba7d"
        android:padding="20px"
     />
     </LinearLayout>
      
   
            
 
     </RelativeLayout>
     </ScrollView>
     


   <RelativeLayout
               android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                 android:background="#000"
                android:layout_below="@id/sc1" >
       
   <LinearLayout
        android:id="@+id/listingxx2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#333"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backbtn2"
            android:layout_width="28dp"
            android:layout_height="match_parent"
          
                 android:src="@drawable/abc_ic_ab_back_holo_dark"
            android:text=""
            android:textColor="#fff" />

        <TextView
            android:id="@+id/ssize2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="Installments" />

    </LinearLayout>

                <Button 
                    android:id="@+id/togg" 
                    android:layout_width="match_parent"
                    android:textColor="#5fba7d"
                    android:text="Tap to Deduct"
                    android:gravity="center"
                     android:layout_below="@id/listingxx2"
                    android:layout_height="wrap_content"
                     
                         android:background="@drawable/layout_shadow"
                     android:layout_margin="1dp"
                    android:padding="10dp" />
                
      
        
            <LinearLayout
                 android:id="@+id/tvaml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#333"
        android:layout_marginBottom="1dp"
          android:layout_below="@id/togg"
        android:padding="10dp" >

        <TextView
            android:id="@+id/datexv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:textColor="#43A047"
              android:textStyle="bold"
            android:layout_weight="0.47" />

   <TextView
            android:id="@+id/tvam"
            
             android:textColor="#43A047"
                android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
           />
    </LinearLayout>
        
        
        
           <LinearLayout
        android:id="@+id/blaa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
          android:layout_below="@+id/tvaml"
        android:background="#333"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal" >
   
               
                 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_margin="10dp"
             
             android:textColor="#B71C1C"
              android:textStyle="bold"
              android:text="Total"
            android:layout_weight="0.47" />

                 
                    <TextView
           android:id="@+id/ssize2gd"
                android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
            android:textColor="#B71C1C"
            android:text="-"
           />
   <TextView
           android:id="@+id/ssize2g"
                android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#B71C1C"
           />



       

    </LinearLayout>
            
        
        
        
        
        
        
        
        
        
                    <ListView
        android:id="@+id/listViewok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_below="@+id/blaa"
        >

    </ListView>
        

            </RelativeLayout>


</RelativeLayout>


