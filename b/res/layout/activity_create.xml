
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/ScrollViewid"
 android:background="#000"
 android:layout_width="fill_parent"
 
 android:layout_height="fill_parent">
<RelativeLayout 
    android:id="@+id/linearLayout1"
   
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    
    android:background="#000">

   <LinearLayout
        android:id="@+id/listingxx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#333"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="28dp"
            android:layout_height="match_parent"
          
                 android:src="@drawable/abc_ic_ab_back_holo_dark"
            android:text=""
            android:textColor="#fff" />

        <TextView
            android:id="@+id/ssize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="Creat" />

    </LinearLayout>
    
   
   
   
   <LinearLayout
        android:id="@+id/meow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_margin="10dp"
       android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="1dp"
      
        
        android:background="@drawable/layout_shadow3"
        android:layout_below="@+id/listingxx"
        android:orientation="vertical" >

    <AutoCompleteTextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
      
            android:maxLength="20"
       
 android:completionThreshold="1"
        android:hint="Name"
      
                         android:background="@drawable/layout_shadow4"
        android:textColor="#999"
        android:textAppearance="?android:attr/textAppearanceLarge" />

     <Button
        android:id="@+id/btnSubmit2"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="- - Choose Method - -"
        android:gravity="center"
        android:background="#fff"
        android:textColor="#000"
        android:padding="20px"
     />
      
       
           <LinearLayout
         android:id="@+id/pass0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="#fff"
      >

               <ImageView
                   android:id="@+id/imageView1"
                   android:layout_width="40dp"
                   android:padding="10dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/fromm1" />

               <TextView
                   android:id="@+id/textView2"
                   android:gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="You've to pay me" />
  
     </LinearLayout>
     <LinearLayout
         android:id="@+id/pass1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="#fff"
      >

               <ImageView
                   android:id="@+id/imageView11"
                   android:layout_width="40dp"
                   android:padding="10dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/too" />

               <TextView
                   android:id="@+id/textView21"
                   android:gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="I've to pay you" />
  
     </LinearLayout>
     
   
     
   

    <LinearLayout
         android:id="@+id/lstv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
             android:layout_marginTop="1dp"

        android:background="#000"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:gravity="center" >

    
        <EditText
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:padding="10dp"
            android:textColor="#ccc"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:maxLength="10"
            android:minEms="1"
            android:hint="0.00"
            />

        
    </LinearLayout>
      
   
    
 
     <DatePicker  
        android:id="@+id/datePicker1"  
        android:calendarViewShown="false"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        
        android:layout_below="@+id/lstv"  
        android:layout_centerHorizontal="true"  
        />  
        
    <LinearLayout
        android:id="@+id/btnChangeDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePicker1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="#000"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.89"
            android:text="30-1-2017"
            android:textSize="20dp"
            android:textColor="#ccc" />

        <Button
            android:id="@+id/btnChangeDate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ssss"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

      <EditText
        android:id="@+id/details"
                android:layout_below="@+id/btnChangeDate2"  
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:hint="Description"
       
       android:textColor="#ccc"
      android:layout_marginTop="1dp"
        android:gravity="top|left"
           android:background="#000"
   
 />
      
    <LinearLayout
         android:id="@+id/lstv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/details"
        android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
        android:gravity="center">
     <Button
        android:id="@+id/btnSubmit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deal"
        
                         android:background="@drawable/layout_shadow"
      
      
        android:textColor="#999"
        android:padding="20px"
     />
     </LinearLayout>
     
      
           
   </LinearLayout>
   
   
  
            
 
     </RelativeLayout>
     </ScrollView>
