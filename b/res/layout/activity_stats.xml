<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fba7d"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.notepadvoice.MainActivity" >

    <LinearLayout
        android1:id="@+id/linearLayout1"
        android1:layout_width="match_parent"
        android1:layout_height="50dp"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"

        android1:orientation="vertical" >

        <TextView
            android1:id="@+id/textView1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="To Pay >"
            android1:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
       android1:id="@+id/linearLayout2"
        android1:layout_below="@+id/linearLayout1"
        android1:layout_centerHorizontal="true"
           android1:layout_width="match_parent"
        android1:layout_height="50dp"

        android1:orientation="vertical" >

        <TextView
            android1:id="@+id/textView2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="To be paid >"
            android1:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>
    
    <LinearLayout
       android1:id="@+id/linearLayout3"
        android1:layout_below="@+id/linearLayout2"
        android1:layout_centerHorizontal="true"
           android1:layout_width="match_parent"
        android1:layout_height="50dp"
        android1:orientation="vertical" >

        <TextView
            android1:id="@+id/textView3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="Plot >"
            android1:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>
       <LinearLayout
       android1:id="@+id/linearLayout4"
        android1:layout_below="@+id/linearLayout3"
        android1:layout_centerHorizontal="true"
           android1:layout_width="match_parent"
        android1:layout_height="50dp"

        android1:orientation="vertical" >

           <TextView
               android1:id="@+id/textView4"
               android1:layout_width="wrap_content"
               android1:layout_height="wrap_content"
               android1:text="List by Date >"
               android1:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>
    
         <LinearLayout
       android1:id="@+id/linearLayout5"
        android1:layout_below="@+id/linearLayout4"
        android1:layout_centerHorizontal="true"
           android1:layout_width="match_parent"
        android1:layout_height="50dp"

        android1:orientation="vertical" >

           <TextView
               android1:id="@+id/textView5"
               android1:layout_width="wrap_content"
               android1:layout_height="wrap_content"
               android1:text="List by Name >"
               android1:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

</RelativeLayout>