<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/ScrollViewid"
 android:background="#333"
 android:layout_width="fill_parent"
 android:layout_height="match_parent">
<RelativeLayout 
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#333">

   <LinearLayout
        android:id="@+id/listingxx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#333"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="28dp"
            android:layout_height="match_parent"
          
                 android:src="@drawable/abc_ic_ab_back_holo_dark"
            android:text=""
            android:textColor="#fff" />

        <TextView
            android:id="@+id/ssize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="Edit" />

    </LinearLayout>

    <EditText
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listingxx"
        android:layout_centerHorizontal="true"
          android:layout_marginTop="1dp"
             android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                   android:layout_marginBottom="1dp"
         android:padding="10dp"
        android:hint="Name"
        android:background="#000"
        android:textColor="#ccc"
        android:textAppearance="?android:attr/textAppearanceLarge" />
   
       <LinearLayout
           android:id="@+id/slay"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/lstv"
           android:layout_alignRight="@+id/textView1"
           android:layout_below="@+id/textView1"
           android:orientation="horizontal" >

           <Spinner
               android:id="@+id/spinner1"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_weight="0.97"
               android:background="#fff"
               android:padding="10dp" />

           <ImageView
               android:id="@+id/imageView1"
               android:paddingRight="10dp"
               android:layout_width="40dp"
               android:background="#fff"
               android:layout_height="match_parent"
               android:src="@drawable/penn" />
       </LinearLayout>
  <LinearLayout
         android:id="@+id/lstv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_below="@+id/slay"
        android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
          android:layout_marginTop="1dp" >

        <EditText
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:maxLength="10"
            android:minEms="1"
            android:hint="0.00"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ccc"
            android:textSize="50dp" />
        
    </LinearLayout>
  
      
     <DatePicker
         android:id="@+id/datePicker1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/lstv"
         android:layout_centerHorizontal="true"
         android:layout_margin="5dp"
         android:calendarViewShown="false" />
        
    <LinearLayout
        android:id="@+id/btnChangeDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePicker1"
        android:layout_marginTop="1dp"
        android:background="#000"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.01"
            android:paddingLeft="10dp"
            android:text="31-1-2917"
            android:textColor="#ccc" />

        <Button
            android:id="@+id/btnChangeDate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ssss"
            android:textColor="#999" />
    </LinearLayout>

      <EditText
        android:id="@+id/details"
                android:layout_below="@+id/btnChangeDate2"  
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp"
        android:textColor="#ccc"
        android:hint="Description"
       
        android:layout_marginLeft="5dp"
        
        android:layout_marginRight="5dp"
        
        android:layout_marginTop="1dp"
        android:gravity="top|left"
           android:background="#000"
   
 />
      
    <LinearLayout
         android:id="@+id/lstv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
         android:layout_marginRight="5dp"
          android:layout_marginLeft="5dp"
           android:layout_marginBottom="1dp"
        android:gravity="center">
     <Button
        android:id="@+id/btnSubmit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="#43A047"
    
                         android:background="@drawable/layout_shadow"
        android:padding="20px"
     />
     </LinearLayout>
     



 
     </RelativeLayout>
     </ScrollView>
